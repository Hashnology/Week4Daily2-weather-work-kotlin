<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.hashi.week4Daily2.fragments.WeatherDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/ic_sunny"
                    android:layout_width="150dp"
                    android:layout_height="150dp" android:id="@+id/ivIcon"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvCity"/>
            <TextView
                    android:text="0.00"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTemperature" app:layout_constraintStart_toEndOf="@+id/ivIcon"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textSize="30sp" android:fontFamily="@font/aldrich" android:textStyle="bold"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tvCity"/>
            <TextView
                    android:text="Time/Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTimeDate" app:layout_constraintStart_toEndOf="@+id/ivIcon"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTemperature" android:textSize="24sp"/>
            <TextView
                    android:text="Weather Desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvWeather" app:layout_constraintStart_toEndOf="@+id/ivIcon"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTimeDate" android:textSize="24sp"/>
            <TextView
                    android:text="Humidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvHumidity"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textSize="24sp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivIcon"/>
            <TextView
                    android:text="Wind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvWind"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvHumidity" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textSize="24sp"/>
            <TextView
                    android:text="Min Temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvMinTemp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvWind" android:textSize="24sp"/>
            <TextView
                    android:text="Max Temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvMaxTemp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMinTemp" android:textSize="24sp"/>
            <TextView
                    android:text="Clouds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tvClouds"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMaxTemp" android:textSize="24sp"/>
            <TextView
                    android:text="City"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCity" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>